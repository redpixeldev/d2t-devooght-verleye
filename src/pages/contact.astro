---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
---

<Layout title='Astro'>
	<Header />
	<div class="relative h-[25rem] md:h-[27rem] lg:h-[33rem] xl:h-[36rem]">
		<img src="/img/hero-contact.jpeg" class="absolute inset-0 w-full h-full object-cover z-10 object-[50%_25%] xl:object-[50%_30%]" alt="">
		<div class="h-24 md:h-32 xl:h-36 w-3/5 sm:w-1/3 md:w-2/5 lg:w-1/3 xl:w-[37%] absolute top-1/2 -translate-y-1/2 left-0 bg-linear-to-r from-black z-20"></div>
		<div class="container flex items-center h-full relative z-30">
			<h1 class="uppercase text-white text-4xl md:text-5xl xl:text-6xl font-medium lg:pl-10 xl:pl-24">Contact</h1>
		</div>
	</div>
	<div class="container pt-16 xl:pt-24 pb-16">
		<div class="flex flex-col lg:flex-row gap-10">
			<div class="lg:w-[30%]">
				<div class="relative ">
					<img src="/img/woman-reading-image.jpeg" class="w-full h-[19rem] sm:h-[22rem] md:h-[28.5rem] object-cover" alt="">
					<div class="absolute inset-0 z-20 w-full h-full bg-linear-to-bl from-brand-primary to-white opacity-80 to-90%"></div>
				</div>
			</div>
			<div class="lg:w-[70%] flex flex-col md:flex-row gap-10">
				<div class="md:w-3/5">
					<h2 class="font-bold text-3xl pb-5">Reach out to us</h2>
					<p class="text-sm pb-5">Vul onderstaand contactformulier in en wij nemen zo snel mogelijk contact met u op!</p>
					<form class="space-y-4">
						<input type="text" name="name" id="name" class="placeholder-black py-px px-2 font-light p-0 border border-[#e5e5e5] bg-transparent w-full" placeholder="Naam">
						<input type="text" name="lastname" id="lastname" class="placeholder-black py-px px-2 font-light p-0 border border-[#e5e5e5] bg-transparent w-full" placeholder="Voornaam">
						<input type="text" name="tel" id="tel" class="placeholder-black py-px px-2 font-light p-0 border border-[#e5e5e5] bg-transparent w-full" placeholder="Tel">
						<input type="email" name="email" id="email" class="placeholder-black py-px px-2 font-light p-0 border border-[#e5e5e5] bg-transparent w-full" placeholder="E-mail">
						<textarea name="message" id="message" class="placeholder-black py-px px-2 font-light p-0 border border-[#e5e5e5] bg-transparent w-full h-40">Bericht</textarea>
						<div class="flex justify-end">
							<button class="uppercase font-bold textlight hover:text-[#62d3f3] transition-colors duration-300 ease-linear">VERZENDEN</button>
						</div>
					</form>
				</div>
				<div class="md:w-2/5 space-y-5">
					<h2 class="font-bold text-3xl">Contactgegevens</h2>
